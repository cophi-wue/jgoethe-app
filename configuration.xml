<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Der Title des Editionsprojekts -->
    <title>Der junge Goethe in seiner Zeit</title>
    <about url=".">Zu dieser Ausgabe</about>
    <structure>
        <!-- Definition der auszuwählenden Abteilungen -->
        <part id="WERKE">
            <!-- Titel der Abteilung -->
            <head>WERKE</head>
            <!--
                ref: Eindeutige ID zur internen Zuordnung im Webformular
                xpath: XPath-Ausdruck der die entsprechende Abteilung selektiert. Im vorliegenden
                       Fall selektieren wir über die xml:id Attribute, es können aber beliebige
                       Ausdrücke verwendet werden.
            -->
            <section ref="DRAMA" xpath="id('DRAMA')/ancestor::div2">Dramatische Schriften </section>
            <section ref="LYRIKANFANG" xpath="id('LYRIKANFANG')/ancestor::div2">Gedichte</section>
            <section ref="POETISCHEPROSA" xpath="id('POETISCHEPROSA')/ancestor::div2">
                Poetische Prosa
            </section>
            <section ref="ESSAYISTISCHEPROSA" xpath="id('ESSAYISTISCHEPROSA')/ancestor::div2">
                Essayistische Prosa
            </section>
            <section ref="BRIEFE" xpath="id('BRIEFE')/ancestor::div2">Briefe</section>
            <section ref="JURISTISCHES" xpath="id('JURISTISCHES')/ancestor::div2">Juristisches</section>
            <section ref="ZEICHNUNGEN" xpath="id('ZEICHNUNGEN')/ancestor::div2">Zeichnungen</section>
            <sep/>
            <section ref="UBERARBEITUNGEN" xpath="id('UBERARBEITUNGEN')/ancestor::div1">
                Überarbeitungen
            </section>
            <section ref="ERINNERUNGEN" xpath="id('ERINNERUNGEN')/ancestor::div1">Erinnerungen</section>
            <sep/>
            <section ref="PARALLEL" xpath="id('PARALLEL')/ancestor::div1">Paralleldarstellungen</section>
            <section ref="CHRONOLOGIE" xpath="id('CHRONOLOGIE')/ancestor::p">
                Chronologische Auswahl
            </section>
        </part>
        <part id="KONTEXTE">
            <head>KONTEXTE</head>
            <section ref="STOFFEUNDVORLAGEN" xpath="id('STOFFEUNDVORLAGEN')/ancestor::div1">
                Stoffe und Vorlagen einzelner Werke
            </section>
            <section ref="AUSDRUCKSFORMEN" xpath="id('AUSDRUCKSFORMEN')/ancestor::div1">
                Literarische Ausdrucksformen der Zeit
            </section>
            <section ref="DICHTUNGSLEBENSKONZEPTE" xpath="id('DICHTUNGSLEBENSKONZEPTE')/ancestor::div1">
                Dichtungs- und Lebenskonzepte
            </section>
            <section ref="GEMEINSCHAFTSPROJEKTE" xpath="id('GEMEINSCHAFTSPROJEKTE')/ancestor::div1">
                Gemeinschaftsprojekte
            </section>
            <section ref="BRIEFEANGOETHE" xpath="id('BRIEFEANGOETHE')/ancestor::div1">
                Briefe an Goethe
            </section>
            <section ref="BERICHTEUBERGOETHE" xpath="id('BERICHTEUBERGOETHE')/ancestor::div1">
                Zeitgenössische Berichte und Urteile über Goethe
            </section>
            <section ref="REZENSIONENBERICHTEABHANDLUNGEN" xpath="id('REZENSIONENBERICHTEABHANDLUNGEN')/ancestor::div1">
                Rezensionen, Polemiken, Parodien
            </section>
            <section ref="DICHTUNGENDERGEFAHRTEN" xpath="id('DICHTUNGENDERGEFAHRTEN')/ancestor::div1">
                Goethe in Schriften der Gefährten
            </section>
        </part>
        <part id="SEMANTISCHE_VORRAETE">
            <head>SEMANTISCHE VORRÄTE</head>
            <section ref="LABORESJUVENILES" xpath="id('LABORESJUVENILES')/ancestor::div1">
                Labores juveniles
            </section>
            <section ref="EPHEMERIDES" xpath="id('EPHEMERIDES')/ancestor::div1">Ephemeriden</section>
            <section ref="BIBLIOTHEKELTERNHAUS" xpath="id('BIBLIOTHEKELTERNHAUS')/ancestor::div1">
                Die Bibliothek in Goethes Elternhaus
            </section>
            <section ref="HEDERICH" xpath="id('HEDERICH')/ancestor::div1">
                Hederichs Mythologisches Lexikon
            </section>
            <section ref="BIBEL" xpath="id('BIBEL')/ancestor::div1" split-levels="2">Die Bibel</section>
        </part>
        <part id="ERSCHLIESSUNGSHILFEN">
            <head>ERSCHLIESSUNGSHILFEN</head>
            <section ref="WERKKOMMENTARE" xpath="id('WERKKOMMENTARE')/ancestor::div1">Kommentare</section>
            <section ref="NAMEN" xpath="id('NAMEN')/ancestor::div1">Namensglossar</section>
            <section ref="CHRONIK" xpath="id('CHRONIK')/ancestor::div1">Chronik</section>
            <section ref="BIBLIOGRAPHIE" xpath="id('BIBLIOGRAPHIE')/ancestor::div1">Bibliographie</section>
            <section ref="WERKTITEL" xpath="id('WERKTITEL')/ancestor::div1">
                Werktitel und Gedichtanfänge
            </section>
        </part>
    </structure>
    
    <messages>
